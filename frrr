-- MM2 Mobile Auto Trade - Phone Version
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- –ù–∞—Å—Ç—Ä–æ–π–∫–∏
local AUTO_TRADE_ENABLED = false
local AUTO_ADD_ENABLED = false

-- –°–æ–∑–¥–∞–µ–º –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å –¥–ª—è —Ç–µ–ª–µ—Ñ–æ–Ω–∞
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "MobileAutoTrade"
screenGui.Parent = playerGui

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 200, 0, 120)
mainFrame.Position = UDim2.new(0, 10, 0, 10)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 6)
corner.Parent = mainFrame

-- –ó–∞–≥–æ–ª–æ–≤–æ–∫
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 25)
title.Text = "MM2 Mobile Trade"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundColor3 = Color3.fromRGB(50, 50, 70)
title.TextSize = 14
title.Font = Enum.Font.GothamBold
title.Parent = mainFrame

-- –ö–Ω–æ–ø–∫–∞ –∞–≤—Ç–æ—Ç—Ä–µ–π–¥–∞
local tradeToggle = Instance.new("TextButton")
tradeToggle.Size = UDim2.new(0.9, 0, 0, 30)
tradeToggle.Position = UDim2.new(0.05, 0, 0, 30)
tradeToggle.Text = "–¢—Ä–µ–π–¥: –í–´–ö–õ"
tradeToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
tradeToggle.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
tradeToggle.TextSize = 12
tradeToggle.Parent = mainFrame

-- –ö–Ω–æ–ø–∫–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è
local addToggle = Instance.new("TextButton")
addToggle.Size = UDim2.new(0.9, 0, 0, 30)
addToggle.Position = UDim2.new(0.05, 0, 0, 65)
addToggle.Text = "–î–æ–±–∞–≤–∏—Ç—å: –í–´–ö–õ"
addToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
addToggle.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
addToggle.TextSize = 12
addToggle.Parent = mainFrame

-- –ü—Ä–æ—Å—Ç–∞—è —Ñ—É–Ω–∫—Ü–∏—è –¥–ª—è –º–æ–±–∏–ª—å–Ω–æ–π —Ç–æ—Ä–≥–æ–≤–ª–∏
local function simpleAutoTrade()
    if not AUTO_TRADE_ENABLED then return end
    
    -- –ñ–¥–µ–º –Ω–µ–º–Ω–æ–≥–æ —á—Ç–æ–±—ã –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å –∑–∞–≥—Ä—É–∑–∏–ª—Å—è
    wait(1)
    
    -- –ü—Ä–æ–±—É–µ–º –Ω–∞–π—Ç–∏ –∏ –Ω–∞–∂–∞—Ç—å –∫–Ω–æ–ø–∫—É Accept
    for _, gui in pairs(playerGui:GetChildren()) do
        if gui:IsA("ScreenGui") then
            for _, element in pairs(gui:GetDescendants()) do
                if element:IsA("TextButton") then
                    local text = element.Text:lower()
                    if text:find("accept") or text:find("confirm") or text:find("–ø—Ä–∏–Ω—è—Ç—å") then
                        pcall(function()
                            -- –ü—Ä–æ—Å—Ç–æ –∫–ª–∏–∫–∞–µ–º –Ω–∞ –∫–Ω–æ–ø–∫—É
                            element.BackgroundColor3 = Color3.new(0, 1, 0)
                            print("–ù–∞–∂–∞—Ç–∞ –∫–Ω–æ–ø–∫–∞: " .. element.Text)
                        end)
                        return true
                    end
                end
            end
        end
    end
    
    return false
end

-- –ü—Ä–æ—Å—Ç–∞—è —Ñ—É–Ω–∫—Ü–∏—è –¥–æ–±–∞–≤–ª–µ–Ω–∏—è –ø—Ä–µ–¥–º–µ—Ç–æ–≤
local function simpleAddItems()
    if not AUTO_ADD_ENABLED then return end
    
    local backpack = player:FindFirstChild("Backpack")
    if not backpack then return end
    
    -- –ü—Ä–æ—Å—Ç–æ –ø—Ä–æ–±—É–µ–º –≤—Å–µ –≤–æ–∑–º–æ–∂–Ω—ã–µ Remote —Å–æ–±—ã—Ç–∏—è
    local remoteNames = {
        "AddItemToTrade",
        "TradeAddItem", 
        "AddToTrade",
        "AddItem",
        "TradeItem"
    }
    
    for _, remoteName in pairs(remoteNames) do
        local remote = ReplicatedStorage:FindFirstChild(remoteName)
        if remote then
            for _, item in pairs(backpack:GetChildren()) do
                if item:IsA("Tool") then
                    pcall(function()
                        remote:FireServer(item)
                        print("–î–æ–±–∞–≤–ª–µ–Ω: " .. item.Name)
                    end)
                end
            end
        end
    end
end

-- –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∫–Ω–æ–ø–æ–∫
tradeToggle.MouseButton1Click:Connect(function()
    AUTO_TRADE_ENABLED = not AUTO_TRADE_ENABLED
    if AUTO_TRADE_ENABLED then
        tradeToggle.Text = "–¢—Ä–µ–π–¥: –í–ö–õ"
        tradeToggle.BackgroundColor3 = Color3.fromRGB(60, 200, 80)
        print("–ê–≤—Ç–æ—Ç—Ä–µ–π–¥ –≤–∫–ª—é—á–µ–Ω!")
    else
        tradeToggle.Text = "–¢—Ä–µ–π–¥: –í–´–ö–õ"
        tradeToggle.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
    end
end)

addToggle.MouseButton1Click:Connect(function()
    AUTO_ADD_ENABLED = not AUTO_ADD_ENABLED
    if AUTO_ADD_ENABLED then
        addToggle.Text = "–î–æ–±–∞–≤–∏—Ç—å: –í–ö–õ"
        addToggle.BackgroundColor3 = Color3.fromRGB(60, 200, 80)
        print("–ê–≤—Ç–æ–¥–æ–±–∞–≤–ª–µ–Ω–∏–µ –≤–∫–ª—é—á–µ–Ω–æ!")
    else
        addToggle.Text = "–î–æ–±–∞–≤–∏—Ç—å: –í–´–ö–õ"
        addToggle.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
    end
end)

-- –ì–ª–∞–≤–Ω—ã–π —Ü–∏–∫–ª (–ø—Ä–æ—Å—Ç–æ–π)
while true do
    wait(2) -- –ü—Ä–æ–≤–µ—Ä—è–µ–º –∫–∞–∂–¥—ã–µ 2 —Å–µ–∫—É–Ω–¥—ã
    
    -- –ï—Å–ª–∏ –æ–±–µ —Ñ—É–Ω–∫—Ü–∏–∏ –≤–∫–ª—é—á–µ–Ω—ã - —Ä–∞–±–æ—Ç–∞–µ–º
    if AUTO_TRADE_ENABLED or AUTO_ADD_ENABLED then
        if AUTO_ADD_ENABLED then
            simpleAddItems()
        end
        
        if AUTO_TRADE_ENABLED then
            simpleAutoTrade()
        end
    end
end

print("üì± –ú–æ–±–∏–ª—å–Ω—ã–π –∞–≤—Ç–æ—Ç—Ä–µ–π–¥ –∑–∞–≥—Ä—É–∂–µ–Ω!")
print("–ü—Ä–æ—Å—Ç–æ –≤–∫–ª—é—á–∏ –∫–Ω–æ–ø–∫–∏ –∏ –Ω–∞—á–Ω–∏ —Ç–æ—Ä–≥–æ–≤–ª—é!")
